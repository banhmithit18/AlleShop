            </p>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button onclick="scrollToTop()" id="scrollTop" title="go to top"> Scroll to top <i class="bi bi-arrow-right"></i></button>
    <footer id="footer-main">
    </footer>

    @*swpier*@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
