<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlleShop</title>
    @* swiper  *@
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    @* font awsome icon*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <style>
        .footer-content {
            position: relative;
            justify-content: center;
            align-items: center;
            margin-left: 70px;
        }

        .quickLinks {
            display: flex;
            position: relative;
            justify-content: center;
            padding: 50px;
        }

        .quickLinks-content {
            position: relative;
            padding: 20px;
        }

            .quickLinks-content h2 {
                letter-spacing: 2px;
                position: relative;
                font-weight: 400;
                font-size: 15px;
                color: #fff;
            }

            .quickLinks-content ul {
                position: relative;
                padding: 40px 100px;
                justify-content: center;
                align-items: center;
            }

                .quickLinks-content ul li {
                    position: relative;
                    list-style: none;
                }

        .about {
            position: relative;
            color: white;
            letter-spacing: 2px;
            margin-left: -98px;
        }

            .about:hover {
                color: darkgrey;
                text-decoration: none;
            }

        .follows {
            color: white;
        }

            .follows:hover {
                color: darkgrey;
                text-decoration: none;
            }

        .Follow {
            margin-left: -103px;
        }

        .need {
            margin-left: -103px;
        }

        .needs {
            color: white;
        }

            .needs:hover {
                color: darkgrey;
                text-decoration: none;
            }
        .placement-banner {
            height: 35px;
            background-color: #fff;
            z-index: 100000;
            position: relative;
            overflow: hidden;
            width: 100%;
            top: 0;
        }

        header {
            position: sticky;
            display: flex;
            top: 0;
            left: 0;
            width: 100%;
            background: black;
            z-index: 10000;
            justify-content: space-between;
            padding: 10px 100px;
            transition: 0.6s;
            align-items: center;
        }

            header .logo {
                position: relative;
                text-decoration: none;
                font-size: 35px;
                letter-spacing: 10px;
                font-weight: 100;
                color: #fff;
                transition: 0.6s;
                top: 0;
                left: 0;
                transform: translate(0,0);
            }

            header ul {
                display: flex;
                left: 0;
                top: 0;
                transform: translate(-50%,0);
                position: relative;
                transition: 0.1s;
            }

        .header-sw-banner {
            background-color: #f4f4f4;
            color: #202020;
            font-size: 12px;
            text-align: center;
            height: 30px;
            padding: 5px;
            text-transform: uppercase;
            letter-spacing: .04643rem;
        }
    </style>
    <section id="banner">
        <div id="placement-banner" class="placement-banner">
            <div class="placement-banner" style="background:#FFFFFF;">
                <div class="placement-square1" style="background:#FFFFFF;"></div>
                <div class="placement-container">
                    <div class="placement-wrapper placement-animated1-right en">
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                    </div>
                    <div class="placement-wrapper placement-animated2-right en">
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                        <img class="placement-icon" src="https://dd6zx4ibq538k.cloudfront.net/static/images/4344/ae609d261961c0c67aacb6198074e6c6_451_260.png">
                        <div class="placement-copy en" style="color:#000000;">Mother's Day Gifts: Order Now for Complimentary Delivery by 5/6</div>
                    </div>
                </div>
                <div class="placement-square2" style="background:#FFFFFF;"></div>
            </div>
        </div>
    </section>
    <header id="header">
        <a href="../Home/Index" class="logo">Alle</a>
        <ul>
            <li>
                <div class="dropdown">
                    <a href="../Product/Index"> NEW <i class="bi bi-caret-down"></i></a>
                    <div class="dropdown-content">
                        <a href="../Product/Index"> Clothes</a>
                    </div>
                </div>

            </li>
            <li>
                <a href="../Product/Index"> HOT </a>

            </li>

            <li>
                <div class="dropdown">
                    <a href="../Product/Index"> ACCESSORIES <i class="bi bi-caret-down"></i> </a>
                    <div class="dropdown-content">
                        <a href="../Product/Index"> Clothes </a>
                        
                    </div>
                </div>

            </li>
        </ul>
        <ul class="infor">
            <li><a href="../Home/LogIn"> Sign In  </a></li>
            <li><a href="../Product/ShoppingCart"> <i class="bi bi-handbag"></i> Bag </a></li>



        </ul>

    </header>



    <div class="container">
        <div class="header-sw-banner">
            <p>
                <i class="bi bi-truck"></i>
                <span>Alle ORDERS ARE DELIVERED WITH TAXES AND DUTIES PRE-PAID. FREE SHIPPING FOR ORDERS OF 999$. </span>
            </p>
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button onclick="scrollToTop()" id="scrollTop" title="go to top"> Scroll to top <i class="bi bi-arrow-right"></i></button>
    <footer id="footer-main">
        <div class="container">
            <div class="footer-content">
                <div class="quickLinks">
                    <div class="quickLinks-content">
                        <h2> THE COMPANY </h2>
                        <ul>
                            <li><a class="about" href="../AboutUs/Index"> About Alle </a></li>
                        </ul>
                    </div>
                    <div class="quickLinks-content">
                        <h2> FOLLOW US </h2>
                        <ul class="Follow">
                            <li><a class="follows" href="../AboutUs/Index"><i class="bi bi-facebook"></i> Facebook </a></li>
                            <li><a class="follows" href="../AboutUs/Index"><i class="bi bi-instagram"></i> Instagram </a></li>
                            <li><a class="follows" href="../AboutUs/Index"><i class="bi bi-twitter"></i> Twiiter </a></li>
                        </ul>
                    </div>
                    <div class="quickLinks-content">
                        <h2> NEED HELP ? </h2>
                        <ul class="need">
                            <li><a class="needs" href="../AboutUs/Index"> Contact Us </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    @*swpier*@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Prooduct.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
