    <header id="header">
        <a href="../Home/index" class="logo">Alle</a>
        <ul>
            <li>
                <div class="dropdown">
                    <a href="../Product/Index"> NEW <i class="bi bi-caret-down"></i></a>
                    <div class="dropdown-content">
                        <a href="../Product/Index"> Clothes </a>
                        
                    </div>
                </div>

            </li>
            <li>
                <a href="../Product/Index"> HOT </a>
            </li>

            <li>
