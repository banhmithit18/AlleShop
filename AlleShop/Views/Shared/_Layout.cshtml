        <div class="swiper-pagination"></div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button onclick="scrollToTop()" id="scrollTop" title="go to top"> Scroll to top <i class="bi bi-arrow-right"></i></button>
