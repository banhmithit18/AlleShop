    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <a href="../Product/index" class="btn_shop"> Shop Now <i class="bi bi-arrow-right-circle"></i> </a>
            </div>
            <div class="swiper-slide">
                <a href="../Product/index" class="btn_shop"> Shop Now <i class="bi bi-arrow-right-circle"></i> </a>
