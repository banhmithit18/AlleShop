<body>
    <style>
        .footer-content {
            position: relative;
            justify-content: center;
            align-items: center;
            margin-left: 70px;
        }

        .quickLinks {
            display: flex;
            position: relative;
            justify-content: center;
            padding: 50px;
        }

        .quickLinks-content {
            position: relative;
            padding: 20px;
        }

            .quickLinks-content h2 {
                letter-spacing: 2px;
                position: relative;
                font-weight: 400;
                font-size: 15px;
                color: #fff;
            }

            .quickLinks-content ul {
                position: relative;
                padding: 40px 100px;
                justify-content: center;
                align-items: center;
                
            }

                .quickLinks-content ul li {
                    position: relative;
                    list-style: none;
                   
                }

        .about {
            position: relative;

            color:white;
            letter-spacing: 2px;
            margin-left: -98px;
        }
        .about:hover{
