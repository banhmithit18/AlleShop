    Layout = "~/Views/Shared/_Layoutmain.cshtml";
}
<link href="~/css/Register.css" rel="stylesheet" />
<div class="container">
    <div class="row" id="main">
        <div class="menu">
            <div class="title">
                A l l e
            </div>
        </div>

        <div class="inputone">
            <div class="textone">
